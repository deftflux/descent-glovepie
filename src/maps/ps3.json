{
    "input": "Sixaxis1",

    "alias": {
        "LeftStickX": "(Sixaxis1.LeftStickX / (1 - Math.max(0, Math.abs(Sixaxis1.LeftStickY) - 0.7)))",
        "LeftStickY": "(Sixaxis1.LeftStickY / (1 - Math.max(0, Math.abs(Sixaxis1.LeftStickX) - 0.7)))",
        "RightStickX": "(Sixaxis1.RightStickX / (1 - Math.max(0, Math.abs(Sixaxis1.RightStickY) - 0.7)))",
        "RightStickY": "(Sixaxis1.RightStickY / (1 - Math.max(0, Math.abs(Sixaxis1.RightStickX) - 0.7)))"
    },

    "shift": [
        "PS",
        "Select",
        "Start"
    ],

    "axis": {
        "LeftStickX": "PPJoy1.Analog0",
        "LeftStickY": "-PPJoy1.Analog1",
        "RightStickX": "PPJoy1.Analog2",
        "RightStickY": "PPJoy1.Analog3"
    },

    "button": {
        "Cross": {
            "normal": "Keyboard.Enter",
            "Select": "~Six",
            "PS": "~Alt-F1"
        },
        "Circle": {
            "normal": "PPJoy1.Digital4",
            "Select": "~Seven",
            "PS": "~Alt-F3"
        },
        "Square": {
            "normal": "Keyboard.Space",
            "Select": "~Nine",
            "PS": "~F2"
        },
        "Triangle": {
            "normal": "PPJoy.Digital5",
            "Select": "~Eight",
            "PS": "~Tab"
        },
        "Up": {
            "normal": "Keyboard.Up",
            "Start": "~Three"
        },
        "Down": {
            "normal": "Keyboard.Down",
            "Start": "~One"
        },
        "Left": {
            "normal": "Keyboard.Left",
            "Start": "~Two",
            "PS": "~Shift-F1"
        },
        "Right": {
            "normal": "Keyboard.Right",
            "Start": "~Four",
            "PS": "~Shift-F2"
        },
        "R1": "PPJoy1.Digital0",
        "R2": "PPJoy1.Digital1",
        "L3": "PPJoy1.Digital2",
        "R3": "PPJoy1.Digital3",
        "PS": "~Escape",
        "Select": {
            "Start": "~Five"
        },
        "Start": {
            "Select": "~Zero"
        }
    },

    "throttle": {
        "axis": "PPJoy1.Analog4",
        "button": "PPJoy1.Digital6",
        "forwardDigital": "L2",
        "forwardAnalog": "L2Analog",
        "reverseDigital": "L1",
        "reverseAnalog": "L1Analog"
    }
}